{
	"env": {
		"browser": true,
		"es2021": true,
		"jest": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"globals": {
		"global": "readonly",
		"document": "readonly",
		"window": "readonly",
		"HTMLElement": "readonly"
	},
	"rules": {
		"indent": ["error", 2],
		"linebreak-style": ["error", "windows"],
		"quotes": ["error", "always"],
		"semi": ["error", "near"]
	},
	"ignorePatterns": [
		"node_modules/",
		"webpack.config.js",
		"public/build/",
		"coverage/"
	]
}
